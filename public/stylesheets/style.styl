@import 'nib'
@import 'logo'

global-reset()
$HEADER-HEIGHT = 40px
$DEFAULT-SPACING = 10px

*
  box-sizing border-box

body
  font-family 'Helvetica Neue', Arial, sans-serif

header
  height $HEADER-HEIGHT
  padding 5px
  padding-left 50px
  padding-right 50px
  background linear-gradient(#444, #111)
  box-shadow 0 0 10px black
  a#home.brand
    font-size 22px
    font-weight 100
    color white
    text-decoration none
  i.nav-topics
    float left
    height 24px
    width 23px
  a#login
    float right
    width 90px
    padding-right 0
    font-size 14px
    background-image url('/images/t.png')
    background-position 1px 1px
    background-repeat no-repeat

section#main
  width 900px
  height 100%
  margin 0 auto 0 auto
  background rgba(white, 0.3)
  padding ($HEADER-HEIGHT + $DEFAULT-SPACING) $DEFAULT-SPACING (4 * $DEFAULT-SPACING) $DEFAULT-SPACING
  border-radius 0 0 $DEFAULT-SPACING $DEFAULT-SPACING

  #send
    absolute bottom $DEFAULT-SPACING left $DEFAULT-SPACING
    right $DEFAULT-SPACING